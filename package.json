        "@vitest/coverage-c8": "^0.23.2",
        "@vitest/ui": "^0.23.2",
        "@vue/test-utils": "^2.0.0-rc.33",
        "eslint": "^8.23.1",
        "eslint-plugin-vue": "^9.5.1",
        "jsdom": "^20.0.0",
        "jsdom-testing-mocks": "^1.6.0",
        "typedoc": "^0.23.14",
        "typescript": "^4.8.3",
        "vite": "^3.1.1",
        "vitest": "^0.23.2",
        "vue-tsc": "^0.40.13"
    }
