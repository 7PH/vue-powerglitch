{
    "name": "vue-powerglitch",
    "version": "0.0.3",
    "types": "./lib/types/src/lib/index.d.ts",
    "main": "./lib/vue-powerglitch.umd.js",
    "module": "./lib/vue-powerglitch.es.js",
    "exports": {
        ".": {
            "import": "./lib/vue-powerglitch.es.js",
            "require": "./lib/vue-powerglitch.umd.js"
        }
